<%layout("layouts/boilerplate")%>


<body>
    <div class="row mt-3">
        <h1 class="col-6 offset-3">Signup on Wanderlust</h1>

        <div class="col-8 offset-2">
            <form action="/signup" method="POST" class="needs-validation" novalidat e>
                <div class="mb-3">
                    <label for="username" class="form-label">Usernam</label>
                    <input 
                    name="username"
                    id="username"
                    type="text"
                    class="form-control"
                    required
                    />
                    <div class="valid-feedback">Looks goods!</div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">email</label>
                    <input 
                    name="email"
                    id="email"
                    type="email"
                    class="form-control"
                    required
                    />
                    
                </div>


                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input 
                    name="password"
                    id="password"
                    type="password"
                    class="form-control"
                    required
                    />
                    
                </div> 

                <button class="btn-success">SignUp</button> 


            </form>